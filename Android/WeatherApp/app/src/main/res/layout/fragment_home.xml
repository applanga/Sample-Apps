<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.applanga.weathersample.utils.FragmentBindingAdapter"/>
        <import type="com.applanga.weathersample.R"/>
        <variable
            name="homeWeather"
            type="com.applanga.weathersample.networking.modules.current.ApiResponseCurrent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_gradient"
        tools:context=".fragments.HomeFragment">

                        <com.google.android.material.imageview.ShapeableImageView
                            tools:visibility="gone"
                            android:id="@+id/home_progress_bar_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:translationZ="10dp" />

                        <ProgressBar
                            tools:visibility="gone"
                            android:id="@+id/home_progress_bar_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:duration="10"
                            android:padding="100dp"
                            android:translationZ="10dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_location_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/settings_location_title"
                app:srcCompat="@drawable/ic_location_white"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/home_location"
                style="@style/home_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@{homeWeather.name + `, ` + homeWeather.sys.country + ` `}"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:text="location" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_date"
            style="@style/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="Thursday, May 27" />

        <TextView
            android:id="@+id/home_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="88sp"
            android:textStyle="bold"
            app:doubleToInt="@{homeWeather.main.temp}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_date"
            tools:text="Deg" />

        <ImageView
            android:id="@+id/home_weather_icon"
            android:layout_width="156dp"
            android:layout_height="158dp"
            android:contentDescription="TODO"
            android:paddingLeft="@dimen/spacing_md"
            android:paddingRight="@dimen/spacing_md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_temperature"
            tools:src="@drawable/ic__11n" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_weather_icon">

            <!-- description -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_description_title)}"
                bind:data="@{FragmentBindingAdapter.getDescriptionString(homeWeather.weather[0].icon)}" />

            <!-- feels like -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_feels_like_title)}"
                bind:data="@{FragmentBindingAdapter.doubleToInt(homeWeather.main.feels_like)}" />

            <!-- clouds -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_clouds_title)}"
                bind:data="@{homeWeather.clouds.all  + `%` + ` `}" />

            <!-- humidity -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_humidity_title)}"
                bind:data="@{homeWeather.main.humidity + `%` + ` `}" />

            <!-- pressure -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_pressure_title)}"
                bind:data="@{homeWeather.main.pressure + ` hPa` + ` `}" />

            <!-- wind speed -->
            <include layout="@layout/home_data_item"
                bind:title="@{context.resources.getString(R.string.home_wind_speed_title)}"
                bind:data="@{homeWeather.wind.speed + ` km/h` + ` `}" />

        </LinearLayout>

