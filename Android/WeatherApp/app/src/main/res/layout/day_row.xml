<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dayRow"
            type="com.example.weatherapp.networking.modules.daily.Day" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#020000FF"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="333dp"
            android:layout_height="485dp"
            android:background="@color/card_background"
            android:padding="8dp">


            <ImageView
                android:id="@+id/daily_icon"
                android:layout_width="196dp"
                android:layout_height="177dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_feels_like_data"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="Weather Icon"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/daily_feels_like_data"
                style="@style/daily_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{dayRow.main.feels_like + `°  `}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_feels_like_text"
                tools:text="feels like" />

            <TextView
                android:id="@+id/daily_description_data"
                style="@style/daily_data_text"
                android:text="@{dayRow.weather[0].description}"
                app:layout_constraintBottom_toBottomOf="@+id/daily_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="description" />

            <TextView
                android:id="@+id/daily_date_data"
                style="@style/daily_data_text_lg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{dayRow.dt_txt.substring(0, 10)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="date" />

            <TextView
                android:id="@+id/daily_time_data"
                style="@style/daily_data_text_lg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.903"
                tools:text="time" />

            <TextView
                android:id="@+id/daily_max_temp_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{dayRow.main.temp_max + `°`}"
                android:textColor="@color/applanga_gray_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_date_data"
                tools:text="max" />

            <TextView
                android:id="@+id/daily_min_temp_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`/ ` + dayRow.main.temp_min + `° `}"
                android:textColor="@color/applanga_gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/daily_max_temp_data"
                app:layout_constraintStart_toEndOf="@+id/daily_max_temp_data"
                tools:text="/ min" />

            <TextView
                android:id="@+id/daily_feels_like_text"
                style="@style/daily_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/current_feels_like"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daily_max_temp_data" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>