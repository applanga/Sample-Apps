<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settings"
            type="com.example.weatherapp.sharedPrefrences.Settings" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SettingsFragment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_city"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Enter city"
            android:textSize="18sp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.577"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />

        <RadioGroup
            android:id="@+id/settings_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/settings_city"
            app:layout_constraintTop_toBottomOf="@+id/settings_city">

            <TextView
                android:id="@+id/settings_radio_group_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measurment units"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/settings_metric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metric"
                android:textColor="@android:color/tertiary_text_light" />

            <RadioButton
                android:id="@+id/settings_imperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imperial"
                android:textColor="@android:color/tertiary_text_light" />

        </RadioGroup>

        <Switch
            android:id="@+id/settings_dark_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Dark mode"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/settings_radio_group"
            app:layout_constraintTop_toBottomOf="@+id/settings_radio_group" />

        <Button
            android:id="@+id/settings_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save changes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_dark_mode_switch"
            app:layout_constraintVertical_bias="0.505" />

        <Switch
            android:id="@+id/settings_notifications_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Allow notifications"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/settings_dark_mode_switch"
            app:layout_constraintTop_toBottomOf="@+id/settings_dark_mode_switch" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>