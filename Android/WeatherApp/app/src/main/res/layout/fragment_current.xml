<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ExtraText">

    <data>
        <variable
            name="currentWeather"
            type="com.example.weatherapp.networking.modules.current.ApiResponseCurrent"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/current_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="32dp"
            android:text="Location"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/temperature_current_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{currentWeather.name + `, ` + currentWeather.sys.country}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/current_location_text"
            app:layout_constraintTop_toBottomOf="@+id/current_location_text"
            tools:text="location" />

        <TextView
            android:id="@+id/current_feels_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Feels Like"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/current_location_text"
            app:layout_constraintTop_toBottomOf="@+id/current_location_text" />

        <TextView
            android:id="@+id/feels_like_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{`` + currentWeather.main.feels_like}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/current_feels_like_text"
            app:layout_constraintTop_toBottomOf="@+id/current_feels_like_text"
            tools:text="feels like" />

        <TextView
            android:id="@+id/current_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Description"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/current_feels_like_text"
            app:layout_constraintTop_toBottomOf="@+id/current_feels_like_text" />

        <TextView
            android:id="@+id/description_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{currentWeather.weather[0].description}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/current_description_text"
            app:layout_constraintTop_toBottomOf="@+id/current_description_text"
            tools:text="description" />

        <TextView
            android:id="@+id/temperature_current_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="96dp"
            android:text="Temperature"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/current_location_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temperature_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{`` + currentWeather.main.temp}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/temperature_current_text"
            app:layout_constraintTop_toBottomOf="@+id/temperature_current_text"
            tools:text="temperature" />

        <TextView
            android:id="@+id/humiditiy_current_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Humidity"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/temperature_current_text"
            app:layout_constraintTop_toBottomOf="@+id/temperature_current_text" />

        <TextView
            android:id="@+id/humiditiy_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{`` + currentWeather.main.humidity}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/humiditiy_current_text"
            app:layout_constraintTop_toBottomOf="@+id/humiditiy_current_text"
            tools:text="humidity" />

        <TextView
            android:id="@+id/clouds_current_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Clouds"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/humiditiy_current_text"
            app:layout_constraintTop_toBottomOf="@+id/humiditiy_current_text" />

        <TextView
            android:id="@+id/clouds_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{`` + currentWeather.clouds.all}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/clouds_current_text"
            app:layout_constraintTop_toBottomOf="@+id/clouds_current_text"
            tools:text="clouds" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>